---
import BaseLayout from '../layouts/BaseLayout.astro';
import { fallbackPosts, mediumProfile } from '../data/blog';
import { fetchMediumArticles } from '../lib/rss-parser';

// Fetch articles from Medium RSS feed at build time
const blogPosts = await fetchMediumArticles();

// Use fallback posts if RSS fetch fails
const posts = blogPosts.length > 0 ? blogPosts : fallbackPosts;
---

<BaseLayout title="Blog" description="DevOps, Cloud & SRE insights from my Medium blog">
  <!-- Header -->
  <section class="py-12 px-6 bg-gradient-to-r from-slate-900 to-slate-800 dark:from-slate-900 dark:to-slate-950 text-white">
    <div class="max-w-5xl mx-auto">
      <h1 class="text-5xl lg:text-6xl font-bold mb-4">My Blog</h1>
      <p class="text-xl text-slate-300 mb-6">
        Insights on DevOps, Cloud Architecture, SRE practices, and infrastructure automation
      </p>
      <a href={mediumProfile.url} target="_blank" rel="noopener noreferrer" class="inline-block px-6 py-3 bg-white text-slate-900 font-semibold rounded-lg hover:bg-slate-100 transition-colors">
        Follow on Medium ‚Üó
      </a>
    </div>
  </section>

  <!-- Recent Articles -->
  <section class="py-12 px-6">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-slate-900 dark:text-white">Recent Articles</h2>
      
      <div class="space-y-6">
        {posts.length > 0 ? (
          posts.map((post) => (
            <a 
              href={post.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="group block bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700 p-6 hover:border-teal-400 dark:hover:border-teal-400 hover:shadow-lg transition-all"
            >
              <div class="flex items-start justify-between mb-3">
                <h3 class="text-xl font-bold text-slate-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors flex-1">
                  {post.title}
                </h3>
                <svg class="w-5 h-5 text-teal-600 dark:text-teal-400 opacity-0 group-hover:opacity-100 transition-opacity flex-shrink-0 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>

              <p class="text-slate-600 dark:text-slate-400 mb-4">
                {post.summary}
              </p>

              <div class="flex items-center justify-between">
                <div class="flex flex-wrap gap-2">
                  {post.tags && post.tags.map((tag) => (
                    <span class="px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-full text-xs font-semibold">
                      {tag}
                    </span>
                  ))}
                </div>
                <time class="text-sm text-slate-500 dark:text-slate-400 flex-shrink-0">
                  {new Date(post.date).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </time>
              </div>
            </a>
          ))
        ) : (
          <div class="bg-slate-50 dark:bg-slate-800 rounded-lg p-8 text-center border-2 border-dashed border-slate-300 dark:border-slate-700">
            <p class="text-slate-600 dark:text-slate-400 mb-4">Check back soon for the latest content!</p>
            <p class="text-sm text-slate-500 dark:text-slate-500">Articles will appear here when your Medium feed is available.</p>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Medium CTA -->
  <section class="py-12 px-6 bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white dark:bg-slate-800 rounded-lg p-8 border border-slate-200 dark:border-slate-700">
        <div class="flex items-center gap-4 mb-4">
          <div class="text-4xl">‚úçÔ∏è</div>
          <h3 class="text-2xl font-bold text-slate-900 dark:text-white">Want More Content?</h3>
        </div>
        <p class="text-slate-600 dark:text-slate-400 mb-6">
          I regularly publish articles on Medium covering DevOps practices, cloud architecture, infrastructure automation, and SRE insights. Follow my profile to stay updated with the latest content.
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href={mediumProfile.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="px-6 py-3 bg-teal-600 hover:bg-teal-700 text-white font-semibold rounded-lg transition-colors"
          >
            Follow on Medium
          </a>
          <a 
            href={mediumProfile.rssFeed}
            target="_blank" 
            rel="noopener noreferrer"
            class="px-6 py-3 border-2 border-teal-600 text-teal-600 dark:text-teal-400 font-semibold rounded-lg hover:bg-teal-50 dark:hover:bg-teal-950/20 transition-colors"
          >
            Subscribe to RSS Feed
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Topics Section -->
  <section class="py-12 px-6">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-slate-900 dark:text-white">Topics I Write About</h2>
      
      <div class="grid md:grid-cols-3 gap-4">
        {[
          { icon: '‚ò∏Ô∏è', title: 'Kubernetes', description: 'Container orchestration, EKS, AKS deployments' },
          { icon: 'üîß', title: 'Infrastructure as Code', description: 'Terraform, CloudFormation, Ansible' },
          { icon: '‚òÅÔ∏è', title: 'Cloud Architecture', description: 'AWS and Azure multi-cloud design' },
          { icon: 'üìä', title: 'SRE & Observability', description: 'Monitoring, alerting, incident management' },
          { icon: 'üöÄ', title: 'CI/CD Pipelines', description: 'Jenkins, GitLab CI, GitHub Actions' },
          { icon: 'üîí', title: 'DevSecOps', description: 'Security scanning, compliance, container security' }
        ].map((topic) => (
          <div class="bg-slate-50 dark:bg-slate-800 rounded-lg p-6 border border-slate-200 dark:border-slate-700 hover:border-teal-400 dark:hover:border-teal-400 transition-colors">
            <div class="text-3xl mb-3">{topic.icon}</div>
            <h4 class="font-semibold text-slate-900 dark:text-white mb-2">{topic.title}</h4>
            <p class="text-sm text-slate-600 dark:text-slate-400">{topic.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
