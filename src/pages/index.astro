---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import TerminalCLI from '../components/TerminalCLI-Simple.astro';
import CommandPalette from '../components/CommandPalette.tsx';
---

<BaseLayout title="Home" description="DevOps, Cloud & SRE Engineer | Scalable Infrastructure Specialist">
  <!-- Hero Section -->
  <Hero />

  <!-- Terminal CLI Section -->
  <section class="py-12 px-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent">Interactive Terminal</h2>
      <p class="text-slate-600 dark:text-slate-400 mb-8">Explore my portfolio using terminal commands. Type "help" to get started!</p>
      <TerminalCLI />
    </div>
  </section>

  <!-- Quick Features Section -->
  <section class="py-12 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-4xl font-bold mb-12 text-center bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent">What I Do</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- DevOps Engineering -->
        <div class="group bg-white dark:bg-slate-800 rounded-lg p-8 border border-slate-200 dark:border-slate-700 hover:border-teal-400 dark:hover:border-teal-400 transition-all hover:shadow-lg">
          <div class="text-5xl mb-4">üîß</div>
          <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-white">DevOps Engineering</h3>
          <p class="text-slate-600 dark:text-slate-400 mb-4">
            Building automated CI/CD pipelines, infrastructure-as-code, and deployment strategies using Jenkins, GitLab CI, Kubernetes, and Terraform.
          </p>
          <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400">
            <li>‚úì Pipeline Automation</li>
            <li>‚úì Infrastructure as Code</li>
            <li>‚úì Container Orchestration</li>
          </ul>
        </div>

        <!-- Cloud Architecture -->
        <div class="group bg-white dark:bg-slate-800 rounded-lg p-8 border border-slate-200 dark:border-slate-700 hover:border-teal-400 dark:hover:border-teal-400 transition-all hover:shadow-lg">
          <div class="text-5xl mb-4">‚òÅÔ∏è</div>
          <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-white">Cloud Architecture</h3>
          <p class="text-slate-600 dark:text-slate-400 mb-4">
            Designing and implementing scalable, secure, multi-cloud infrastructure across AWS and Azure with focus on cost optimization.
          </p>
          <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400">
            <li>‚úì Multi-Cloud Design</li>
            <li>‚úì Cost Optimization</li>
            <li>‚úì Security & Compliance</li>
          </ul>
        </div>

        <!-- SRE & Observability -->
        <div class="group bg-white dark:bg-slate-800 rounded-lg p-8 border border-slate-200 dark:border-slate-700 hover:border-teal-400 dark:hover:border-teal-400 transition-all hover:shadow-lg">
          <div class="text-5xl mb-4">üìä</div>
          <h3 class="text-xl font-bold mb-3 text-slate-900 dark:text-white">SRE & Observability</h3>
          <p class="text-slate-600 dark:text-slate-400 mb-4">
            Implementing SLIs/SLOs, monitoring, and observability practices using Prometheus, Grafana, Splunk, Datadog, and ELK stack.
          </p>
          <ul class="space-y-2 text-sm text-slate-600 dark:text-slate-400">
            <li>‚úì SLI/SLO Definition</li>
            <li>‚úì Monitoring & Alerting</li>
            <li>‚úì Incident Management</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 px-6 bg-gradient-to-r from-slate-900 to-slate-800 dark:from-slate-900 dark:to-slate-950">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Work Together?</h2>
      <p class="text-xl text-slate-300 mb-8">
        I'm open to opportunities in DevOps, Cloud Engineering, and SRE roles. Let's build something amazing!
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/projects/" class="px-8 py-3 bg-teal-600 hover:bg-teal-700 text-white rounded-lg font-semibold transition-colors">
          View My Work
        </a>
        <a href="mailto:{email}" class="px-8 py-3 border-2 border-white text-white hover:bg-white hover:text-slate-900 rounded-lg font-semibold transition-colors">
          Get In Touch
        </a>
      </div>
    </div>
  </section>

  <!-- Command Palette Component -->
  <CommandPalette client:idle />
</BaseLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section {
    animation: fadeInUp 0.6s ease-out;
  }
</style>
