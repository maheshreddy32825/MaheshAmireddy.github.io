---
import { skillCategories, highlightedSkills } from '../data/skills';
---

<section class="py-12">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent">Technical Skills</h2>
    <p class="text-slate-600 dark:text-slate-400 mb-12">Technologies and tools I work with daily</p>

    <!-- Highlighted Skills with Proficiency Bars -->
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <div>
        <h3 class="text-xl font-semibold mb-6 text-slate-900 dark:text-white">Core Expertise</h3>
        <div class="space-y-6">
          {highlightedSkills.map((skill) => (
            <div>
              <div class="flex items-center justify-between mb-2">
                <span class="font-semibold text-slate-900 dark:text-white">{skill.name}</span>
                <span class="text-sm text-slate-600 dark:text-slate-400">{skill.years}+ yrs</span>
              </div>
              <div class="w-full bg-slate-200 dark:bg-slate-700 rounded-full h-2">
                <div 
                  class="h-full bg-gradient-to-r from-teal-500 to-cyan-500 rounded-full transition-all"
                  style={{width: `${skill.level === 'Expert' ? 95 : 85}%`}}
                ></div>
              </div>
              <p class="text-xs text-slate-600 dark:text-slate-400 mt-1">{skill.level}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Tech Stack Categories -->
      <div>
        <h3 class="text-xl font-semibold mb-6 text-slate-900 dark:text-white">Technology Stack</h3>
        <div class="grid grid-cols-2 gap-4">
          {skillCategories.map((category) => (
            <div class="bg-slate-50 dark:bg-slate-800 rounded-lg p-4 border border-slate-200 dark:border-slate-700">
              <h4 class="font-semibold text-sm text-teal-600 dark:text-teal-400 mb-2">{category.category}</h4>
              <ul class="space-y-1">
                {category.skills.slice(0, 3).map((skill) => (
                  <li class="text-xs text-slate-600 dark:text-slate-400">âœ“ {skill}</li>
                ))}
                {category.skills.length > 3 && (
                  <li class="text-xs text-slate-500 dark:text-slate-500 italic">+{category.skills.length - 3} more</li>
                )}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- All Skills by Category -->
    <div class="space-y-6">
      <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Complete Skillset</h3>
      {skillCategories.map((category) => (
        <div class="bg-slate-50 dark:bg-slate-800 rounded-lg p-6 border border-slate-200 dark:border-slate-700">
          <h4 class="font-semibold text-lg text-slate-900 dark:text-white mb-4">{category.category}</h4>
          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="px-4 py-2 bg-white dark:bg-slate-700 rounded-full text-sm text-slate-700 dark:text-slate-200 border border-slate-200 dark:border-slate-600 hover:border-teal-400 dark:hover:border-teal-400 transition-colors">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
