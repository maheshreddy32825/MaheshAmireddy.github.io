---
import { stats } from '../data/experience';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20 pb-12">
  <!-- Animated background gradient -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-gradient-to-br from-teal-500/20 to-cyan-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-gradient-to-tl from-amber-500/20 to-orange-500/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 py-12">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Content -->
      <div class="space-y-8 animate-fade-in">
        <div class="space-y-4">
          <h1 class="text-5xl lg:text-7xl font-bold bg-gradient-to-r from-teal-600 via-cyan-600 to-amber-500 bg-clip-text text-transparent">
            Mahesh Reddy
          </h1>
          <p class="text-xl lg:text-2xl text-slate-700 dark:text-slate-300 font-light">
            DevOps, Cloud & SRE Engineer
          </p>
          <p class="text-lg text-slate-600 dark:text-slate-400 leading-relaxed">
            Building scalable, secure, and resilient cloud infrastructure across AWS, Azure, and Kubernetes. Passionate about automation, observability, and DevOps excellence.
          </p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 gap-6 md:grid-cols-4 pt-8 border-t border-slate-200 dark:border-slate-700">
          <div class="space-y-2">
            <div class="text-4xl font-bold bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent">{stats.yearsExperience}+</div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Years Experience</p>
          </div>
          <div class="space-y-2">
            <div class="text-4xl font-bold bg-gradient-to-r from-cyan-600 to-amber-500 bg-clip-text text-transparent">{stats.certificationsCount}</div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Certifications</p>
          </div>
          <div class="space-y-2">
            <div class="text-4xl font-bold bg-gradient-to-r from-amber-500 to-orange-600 bg-clip-text text-transparent">{stats.projectsDelivered}+</div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Projects</p>
          </div>
          <div class="space-y-2">
            <div class="text-4xl font-bold bg-gradient-to-r from-orange-600 to-teal-600 bg-clip-text text-transparent">{stats.activeStackCount}</div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Tech Stack</p>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 pt-8">
          <a href="/about/" class="px-8 py-3 bg-gradient-to-r from-teal-600 to-cyan-600 text-white rounded-lg font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300">
            Explore My Work
          </a>
          <a href="/blog/" class="px-8 py-3 border-2 border-teal-600 text-teal-600 dark:text-teal-400 rounded-lg font-semibold hover:bg-teal-50 dark:hover:bg-teal-950/20 transition-all duration-300">
            Read My Blog
          </a>
          <a href="https://github.com/maheshreddy32825" target="_blank" rel="noopener noreferrer" class="px-8 py-3 border-2 border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 rounded-lg font-semibold hover:bg-slate-50 dark:hover:bg-slate-800 transition-all duration-300">
            View GitHub
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex gap-6 pt-4">
          <a href="https://github.com/maheshreddy32825" target="_blank" rel="noopener noreferrer" class="text-slate-600 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" title="GitHub" aria-label="Visit GitHub profile">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path></svg>
          </a>
          <a href="https://linkedin.com/in/amireddym" target="_blank" rel="noopener noreferrer" class="text-slate-600 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" title="LinkedIn" aria-label="Visit LinkedIn profile">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.475-2.236-1.986-2.236-1.081 0-1.722.731-2.004 1.438-.103.25-.129.599-.129.948v5.419h-3.554s.043-8.789 0-9.692h3.554v1.371c.43-.664 1.199-1.61 2.920-1.61 2.135 0 3.753 1.395 3.753 4.398v5.534zM5.337 9.433c-1.144 0-1.915-.758-1.915-1.707 0-.955.771-1.71 1.952-1.71 1.176 0 1.915.755 1.938 1.71 0 .949-.762 1.707-1.975 1.707zm1.582 11.019H3.726V9.760h3.193v10.692zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"></path></svg>
          </a>
          <a href="https://medium.com/@mahesh.r0608" target="_blank" rel="noopener noreferrer" class="text-slate-600 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" title="Medium" aria-label="Visit Medium profile">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42c1.87 0 3.38 2.88 3.38 6.42M24 12c0 2.98-.46 5.4-.99 5.4-.54 0-.99-2.42-.99-5.4s.45-5.4.99-5.4c.53 0 .99 2.42.99 5.4z"></path></svg>
          </a>
        </div>
      </div>

      <!-- Right: Cloud Architecture Visualization -->
      <div class="hidden lg:flex items-center justify-center">
        <div class="relative w-full h-96">
          <!-- Cloud icons with animation -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="relative w-80 h-80">
              <!-- Center circle -->
              <div class="absolute inset-1/3 bg-gradient-to-br from-teal-500 to-cyan-600 rounded-full blur-2xl opacity-20"></div>
              
              <!-- AWS -->
              <div class="absolute top-0 left-1/2 transform -translate-x-1/2 animate-bounce">
                <div class="w-16 h-16 bg-white dark:bg-slate-800 rounded-lg flex items-center justify-center shadow-lg border border-orange-200 dark:border-orange-800">
                  <svg viewBox="0 0 100 100" class="w-12 h-12">
                    <text x="50" y="65" text-anchor="middle" font-size="48" font-weight="bold" fill="#FF9900">AWS</text>
                  </svg>
                </div>
              </div>

              <!-- Azure -->
              <div class="absolute top-1/2 right-0 transform -translate-y-1/2 animate-bounce delay-100">
                <div class="w-16 h-16 bg-white dark:bg-slate-800 rounded-lg flex items-center justify-center shadow-lg border border-blue-200 dark:border-blue-800">
                  <svg viewBox="0 0 100 100" class="w-12 h-12">
                    <text x="50" y="65" text-anchor="middle" font-size="48" font-weight="bold" fill="#0078D4">A</text>
                  </svg>
                </div>
              </div>

              <!-- Kubernetes -->
              <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 animate-bounce delay-200">
                <div class="w-16 h-16 bg-white dark:bg-slate-800 rounded-lg flex items-center justify-center text-2xl shadow-lg border border-blue-200 dark:border-blue-800">
                  <svg viewBox="0 0 100 100" class="w-12 h-12">
                    <text x="50" y="65" text-anchor="middle" font-size="42" font-weight="bold" fill="#326CE5">k</text>
                  </svg>
                </div>
              </div>

              <!-- Docker -->
              <div class="absolute top-1/2 left-0 transform -translate-y-1/2 animate-bounce delay-300">
                <div class="w-16 h-16 bg-white dark:bg-slate-800 rounded-lg flex items-center justify-center text-2xl shadow-lg border border-blue-200 dark:border-blue-800">
                  <svg viewBox="0 0 100 100" class="w-12 h-12">
                    <text x="50" y="65" text-anchor="middle" font-size="40" font-weight="bold" fill="#2496ED">üê≥</text>
                  </svg>
                </div>
              </div>

              <!-- Connecting lines (SVG) -->
              <svg class="absolute inset-0 w-full h-full" viewBox="0 0 320 320" preserveAspectRatio="none">
                <line x1="160" y1="0" x2="160" y2="80" stroke="url(#gradient)" stroke-width="2" opacity="0.3" />
                <line x1="160" y1="160" x2="240" y2="160" stroke="url(#gradient)" stroke-width="2" opacity="0.3" />
                <line x1="160" y1="320" x2="160" y2="240" stroke="url(#gradient)" stroke-width="2" opacity="0.3" />
                <line x1="160" y1="160" x2="80" y2="160" stroke="url(#gradient)" stroke-width="2" opacity="0.3" />
                
                <defs>
                  <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#14b8a6;stop-opacity:1" />
                    <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1" />
                  </linearGradient>
                </defs>
              </svg>
            </div>
          </div>

          <!-- Tech Stack Badges -->
          <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2 flex gap-2 justify-center flex-wrap">
            <span class="px-3 py-2 bg-gradient-to-r from-orange-100 to-orange-50 dark:from-orange-900/30 dark:to-orange-800/20 rounded-full text-sm font-semibold text-orange-700 dark:text-orange-400">üì¶ Terraform</span>
            <span class="px-3 py-2 bg-gradient-to-r from-cyan-100 to-cyan-50 dark:from-cyan-900/30 dark:to-cyan-800/20 rounded-full text-sm font-semibold text-cyan-700 dark:text-cyan-400">‚õµ Helm</span>
            <span class="px-3 py-2 bg-gradient-to-r from-purple-100 to-purple-50 dark:from-purple-900/30 dark:to-purple-800/20 rounded-full text-sm font-semibold text-purple-700 dark:text-purple-400">üöÄ GitOps</span>
            <span class="px-3 py-2 bg-gradient-to-r from-red-100 to-red-50 dark:from-red-900/30 dark:to-red-800/20 rounded-full text-sm font-semibold text-red-700 dark:text-red-400">ü¶ä GitLab</span>
            <span class="px-3 py-2 bg-gradient-to-r from-blue-100 to-blue-50 dark:from-blue-900/30 dark:to-blue-800/20 rounded-full text-sm font-semibold text-blue-700 dark:text-blue-400">‚öôÔ∏è Jenkins</span>
            <span class="px-3 py-2 bg-gradient-to-r from-indigo-100 to-indigo-50 dark:from-indigo-900/30 dark:to-indigo-800/20 rounded-full text-sm font-semibold text-indigo-700 dark:text-indigo-400">üîÑ CI/CD</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .delay-1000 {
    animation-delay: 1000ms;
  }

  .delay-100 {
    animation-delay: 100ms;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  .delay-300 {
    animation-delay: 300ms;
  }
</style>
