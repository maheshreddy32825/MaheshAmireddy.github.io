---
import { stats } from '../data/experience';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20 pb-12">
  <!-- Animated background gradient -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-gradient-to-br from-teal-500/20 to-cyan-500/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-gradient-to-tl from-amber-500/20 to-orange-500/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 py-12">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Content -->
      <div class="space-y-8 animate-fade-in">
        <div class="space-y-4">
          <h1 class="text-5xl lg:text-7xl font-bold bg-gradient-to-r from-teal-600 via-cyan-600 to-amber-500 bg-clip-text text-transparent">
            Mahesh Amireddy
          </h1>
          <p class="text-xl lg:text-2xl text-slate-700 dark:text-slate-300 font-light">
            DevOps, Cloud & SRE Engineer
          </p>
          <p class="text-lg text-slate-600 dark:text-slate-400 leading-relaxed">
            Building scalable, secure, and resilient cloud infrastructure across AWS, Azure, and Kubernetes. Passionate about automation, observability, and DevOps excellence.
          </p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 gap-6 md:grid-cols-3 pt-8 border-t border-slate-200 dark:border-slate-700">
          <div class="space-y-2">
            <div class="text-4xl font-bold bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent">{stats.yearsExperience}+</div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Years Experience</p>
          </div>
          <div class="space-y-2">
            <div class="text-4xl font-bold bg-gradient-to-r from-cyan-600 to-amber-500 bg-clip-text text-transparent">{stats.certificationsCount}</div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Certifications</p>
          </div>
          <div class="space-y-2">
            <div class="text-4xl font-bold bg-gradient-to-r from-amber-500 to-orange-600 bg-clip-text text-transparent">{stats.projectsDelivered}+</div>
            <p class="text-sm text-slate-600 dark:text-slate-400">Projects</p>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 pt-8">
          <a href="/about/" class="px-8 py-3 bg-gradient-to-r from-teal-600 to-cyan-600 text-white rounded-lg font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300">
            Explore My Work
          </a>
          <a href="/blog/" class="px-8 py-3 border-2 border-teal-600 text-teal-600 dark:text-teal-400 rounded-lg font-semibold hover:bg-teal-50 dark:hover:bg-teal-950/20 transition-all duration-300">
            Read My Blog
          </a>
          <a href="https://github.com/maheshreddy32825" target="_blank" rel="noopener noreferrer" class="px-8 py-3 border-2 border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-300 rounded-lg font-semibold hover:bg-slate-50 dark:hover:bg-slate-800 transition-all duration-300">
            View GitHub
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex gap-6 pt-4">
          <a href="https://github.com/maheshreddy32825" target="_blank" rel="noopener noreferrer" class="text-slate-600 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" title="GitHub" aria-label="Visit GitHub profile">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v 3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path></svg>
          </a>
          <a href="https://linkedin.com/in/amireddym" target="_blank" rel="noopener noreferrer" class="text-slate-600 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" title="LinkedIn" aria-label="Visit LinkedIn profile">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.475-2.236-1.986-2.236-1.081 0-1.722.731-2.004 1.438-.103.25-.129.599-.129.948v5.419h-3.554s.043-8.789 0-9.692h3.554v1.371c.43-.664 1.199-1.61 2.920-1.61 2.135 0 3.753 1.395 3.753 4.398v5.534zM5.337 9.433c-1.144 0-1.915-.758-1.915-1.707 0-.955.771-1.71 1.952-1.71 1.176 0 1.915.755 1.938 1.71 0 .949-.762 1.707-1.975 1.707zm1.582 11.019H3.726V9.760h3.193v10.692zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"></path></svg>
          </a>
          <a href="https://medium.com/@mahesh.r0608" target="_blank" rel="noopener noreferrer" class="text-slate-600 dark:text-slate-400 hover:text-teal-600 dark:hover:text-teal-400 transition-colors" title="Medium" aria-label="Visit Medium profile">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42c1.87 0 3.38 2.88 3.38 6.42M24 12c0 2.98-.46 5.4-.99 5.4-.54 0-.99-2.42-.99-5.4s.45-5.4.99-5.4c.53 0 .99 2.42.99 5.4z"></path></svg>
          </a>
        </div>
      </div>

      <!-- Right: Cloud Architecture Visualization -->
      <div class="hidden lg:flex items-center justify-center">
        <div class="relative w-full h-96">
          <!-- Cloud icons with animation -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="relative w-80 h-80">
              <!-- Center circle -->
              <div class="absolute inset-1/3 bg-gradient-to-br from-teal-500 to-cyan-600 rounded-full blur-3xl opacity-30 animate-pulse"></div>
              
              <!-- AWS - Top -->
              <div class="absolute top-0 left-1/2 transform -translate-x-1/2 animate-bounce" aria-label="AWS Cloud Platform">
                <div class="w-16 h-16 bg-slate-100 dark:bg-orange-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-orange-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/amazonwebservices/amazonwebservices-original-wordmark.svg" alt="AWS" class="w-10 h-10 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(255,153,0,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Azure - Right -->
              <div class="absolute top-1/2 right-0 transform -translate-y-1/2 animate-bounce delay-100" aria-label="Microsoft Azure">
                <div class="w-16 h-16 bg-slate-100 dark:bg-blue-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-blue-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/azure/azure-original.svg" alt="Azure" class="w-9 h-9 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(59,130,246,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Kubernetes - Bottom -->
              <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 animate-bounce delay-200" aria-label="Kubernetes Container Orchestration">
                <div class="w-16 h-16 bg-slate-100 dark:bg-blue-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-blue-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/kubernetes/kubernetes-plain.svg" alt="Kubernetes" class="w-9 h-9 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(59,130,246,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Docker - Left -->
              <div class="absolute top-1/2 left-0 transform -translate-y-1/2 animate-bounce delay-300" aria-label="Docker Container Platform">
                <div class="w-16 h-16 bg-slate-100 dark:bg-cyan-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-blue-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/docker/docker-original.svg" alt="Docker" class="w-9 h-9 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(34,211,238,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Terraform - Top Right -->
              <div class="absolute top-1/4 right-1/4 animate-bounce delay-150" aria-label="Terraform Infrastructure as Code">
                <div class="w-14 h-14 bg-slate-100 dark:bg-purple-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-purple-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/terraform/terraform-original.svg" alt="Terraform" class="w-8 h-8 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(168,85,247,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Helm - Top Left -->
              <div class="absolute top-1/4 left-1/4 animate-bounce delay-250" aria-label="Helm Kubernetes Package Manager">
                <div class="w-14 h-14 bg-slate-100 dark:bg-cyan-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-cyan-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/helm/helm-original.svg" alt="Helm" class="w-8 h-8 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(34,211,238,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Datadog - Bottom Right -->
              <div class="absolute bottom-1/4 right-1/4 animate-bounce delay-200" aria-label="Datadog Monitoring and Analytics">
                <div class="w-14 h-14 bg-slate-100 dark:bg-purple-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-purple-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/datadog/datadog-original.svg" alt="Datadog" class="w-8 h-8 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(168,85,247,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Grafana - Bottom Left -->
              <div class="absolute bottom-1/4 left-1/4 animate-bounce delay-300" aria-label="Grafana Visualization Platform">
                <div class="w-14 h-14 bg-slate-100 dark:bg-orange-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-orange-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/grafana/grafana-original.svg" alt="Grafana" class="w-8 h-8 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(255,153,0,0.4)]" loading="lazy" />
                </div>
              </div>

              <!-- Prometheus - Center Left (small) -->
              <div class="absolute top-2/5 left-1/3 animate-bounce delay-100" aria-label="Prometheus Monitoring">
                <div class="w-12 h-12 bg-slate-100 dark:bg-red-500/20 rounded-lg flex items-center justify-center shadow-lg hover:shadow-xl border border-red-200 dark:border-white/40 hover:scale-110 transition-all">
                  <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/prometheus/prometheus-original.svg" alt="Prometheus" class="w-7 h-7 drop-shadow-lg dark:drop-shadow-[0_4px_8px_rgba(239,68,68,0.4)]" loading="lazy" />
                </div>
              </div>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .delay-1000 {
    animation-delay: 1000ms;
  }

  .delay-100 {
    animation-delay: 100ms;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  .delay-300 {
    animation-delay: 300ms;
  }
</style>
