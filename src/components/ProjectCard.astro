---
interface Props {
  project: {
    id: string;
    name: string;
    description: string;
    url: string;
    language: string;
    topics: string[];
    featured: boolean;
  };
}

const { project } = Astro.props;
---

<a href={project.url} target="_blank" rel="noopener noreferrer" class="group bg-white dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700 p-6 hover:border-teal-400 dark:hover:border-teal-400 hover:shadow-lg transition-all">
  <!-- Header with star for featured -->
  <div class="flex items-start justify-between mb-4">
    <h3 class="text-xl font-bold text-slate-900 dark:text-white group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors">
      {project.name}
    </h3>
    {project.featured && (
      <span class="text-yellow-500 text-2xl">‚≠ê</span>
    )}
  </div>

  <!-- Description -->
  <p class="text-slate-600 dark:text-slate-400 mb-4 line-clamp-2">
    {project.description}
  </p>

  <!-- Language badge -->
  <div class="mb-4">
    <span class="inline-block px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded-full text-xs font-semibold">
      {project.language}
    </span>
  </div>

  <!-- Topics -->
  <div class="flex flex-wrap gap-2 mb-4">
    {project.topics.slice(0, 3).map((topic) => (
      <span class="px-2 py-1 bg-teal-50 dark:bg-teal-900/20 text-teal-700 dark:text-teal-400 rounded text-xs font-semibold">
        {topic}
      </span>
    ))}
    {project.topics.length > 3 && (
      <span class="px-2 py-1 text-slate-500 dark:text-slate-400 text-xs">
        +{project.topics.length - 3}
      </span>
    )}
  </div>

  <!-- Footer with link icon -->
  <div class="flex items-center gap-2 text-teal-600 dark:text-teal-400 opacity-0 group-hover:opacity-100 transition-opacity">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
    </svg>
    <span class="text-sm font-semibold">View Repository</span>
  </div>
</a>
