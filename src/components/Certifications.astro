---
import { certifications } from '../data/certifications';
---

<section class="py-12">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-teal-600 to-cyan-600 bg-clip-text text-transparent">Certifications & Credentials</h2>
    <p class="text-slate-600 dark:text-slate-400 mb-12">Industry-recognized certifications</p>

    <div class="grid md:grid-cols-3 gap-6">
      {certifications.map((cert) => (
        <a 
          href={cert.link}
          target="_blank"
          rel="noopener noreferrer"
          class="group relative overflow-hidden rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 p-6 hover:shadow-lg transition-all hover:border-teal-400 dark:hover:border-teal-400"
        >
          <!-- Gradient Background -->
          <div class={`absolute inset-0 bg-gradient-to-br ${cert.color} opacity-10 group-hover:opacity-15 transition-opacity`}></div>
          
          <!-- Content -->
          <div class="relative z-10">
            <div class="text-4xl mb-4">
              {cert.icon === 'aws' && '☁️'}
              {cert.icon === 'azure' && '⛅'}
              {cert.icon === 'kubernetes' && '☸️'}
            </div>
            
            <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2 group-hover:text-teal-600 dark:group-hover:text-teal-400 transition-colors">
              {cert.name}
            </h3>
            
            <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">{cert.issuer}</p>
            
            <div class={`inline-block px-3 py-1 rounded-full text-xs font-semibold ${
              cert.date === 'In Progress'
                ? 'bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400'
                : 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400'
            }`}>
              {cert.date === 'In Progress' ? '⟳ ' + cert.date : '✓ ' + cert.date}
            </div>
          </div>
          
          <!-- Hover Arrow -->
          <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
            <svg class="w-5 h-5 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- Additional Info -->
    <div class="mt-12 p-6 bg-slate-50 dark:bg-slate-800 rounded-lg border border-slate-200 dark:border-slate-700">
      <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Continuous Learning</h3>
      <p class="text-slate-600 dark:text-slate-400 mb-4">
        I'm committed to staying current with industry standards and emerging technologies. Currently preparing for:
      </p>
      <ul class="space-y-2">
        <li class="flex items-center gap-2 text-slate-700 dark:text-slate-300">
          <span class="text-teal-600 dark:text-teal-400">→</span> Certified Kubernetes Administrator (CKA)
        </li>
        <li class="flex items-center gap-2 text-slate-700 dark:text-slate-300">
          <span class="text-teal-600 dark:text-teal-400">→</span> Advanced cloud certifications
        </li>
        <li class="flex items-center gap-2 text-slate-700 dark:text-slate-300">
          <span class="text-teal-600 dark:text-teal-400">→</span> SRE and observability specializations
        </li>
      </ul>
    </div>
  </div>
</section>
